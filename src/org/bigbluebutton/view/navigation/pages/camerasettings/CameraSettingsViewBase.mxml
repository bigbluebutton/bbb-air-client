<?xml version="1.0" encoding="utf-8"?>
<view:NoTabView xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:view="org.bigbluebutton.core.view.*"
				xmlns:ui="org.bigbluebutton.view.ui.*" 
				styleName="viewStyle"
				>
	
	<fx:Script>
		<![CDATA[
			import org.bigbluebutton.view.navigation.pages.PagesENUM;
			import org.bigbluebutton.view.navigation.pages.TransitionAnimationENUM;
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<s:RadioButtonGroup id="cameraQualityTypeRadioButtonGroup" enabled="false"/>
	</fx:Declarations>
	<s:VGroup width="100%" height="100%" styleName="pageStyle" horizontalAlign="center" paddingTop="{getStyle('topPadding')}">
		<s:Button id="startCameraButton0" styleName="cameraSettingsStartButtonStyle cameraSettingsButtonStyle" width="80%" 
				  label="{resourceManager.getString('resources', 'userDetail.cameraBtn.text')}" />
		<s:Button id="swapCameraBtn0" styleName="cameraSettingsSwapButtonStyle cameraSettingsButtonStyle" width="80%" 
				  label="{resourceManager.getString('resources', 'cameraSettings.swap')}" />
		<s:VGroup id="cameraQualityGroup" width="80%">
			<s:Label width="100%" color="{getStyle('textColor')}"
					 text="{resourceManager.getString('resources', 'profile.settings.cameraQuality.selectquality')}" />
			<s:SkinnableContainer width="100%" styleName="containerStyle" >
				<s:layout>
					<s:VerticalLayout verticalAlign="middle" />
				</s:layout>
				<s:RadioButton id="lowQuality" label="{resourceManager.getString('resources', 'profile.settings.cameraQuality.low') + ' (160x120)'}"
							   groupName="cameraQualityTypeRadioButtonGroup" width="100%" value="low" />	
				<s:Line height="0" width="100%" >
					<s:stroke>
						<s:SolidColorStroke color="{getStyle('lineColor')}" weight="{getStyle('weight')}"/>
					</s:stroke>
				</s:Line>
				<s:RadioButton id="mediumQuality" label="{resourceManager.getString('resources', 'profile.settings.cameraQuality.medium') + ' (320x240)'}"
							   groupName="cameraQualityTypeRadioButtonGroup" width="100%" value="medium" />
				<s:Line height="0" width="100%">
					<s:stroke>
						<s:SolidColorStroke color="{getStyle('lineColor')}" weight="{getStyle('weight')}" />
					</s:stroke>
				</s:Line>
				<s:RadioButton id="highQuality" label="{resourceManager.getString('resources', 'profile.settings.cameraQuality.high') + ' (640x480)'}"
							   groupName="cameraQualityTypeRadioButtonGroup" width="100%" value="high" />	
			</s:SkinnableContainer>
		</s:VGroup>		
	</s:VGroup>
</view:NoTabView>